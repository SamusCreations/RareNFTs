
@{
    ViewData["Title"] = "SalesReport";
}

<form id="myForm"
      asp-action="SalesReportPDF"
      asp-controller="Report"
      asp-antiforgery="true"
      method="post"
      asp-antiforgery="true">
    <div class="card">

        <div class="card-body">
            <h5 class="card-title">Sales Report</h5>

            <div class="mb-3 row">
                <label class="col-form-label">Start Date</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" name="startDate">
                </div>
                <label class="col-form-label">End Date</label>
                <div class="col-sm-8">
                    <input type="date" class="form-control" name="endDate">
                </div>
                <div class="col-sm-4">
                    <button type="submit" class="btn alert-success">Download Report</button>
                </div>
            </div>
        </div>
    </div>
</form>





